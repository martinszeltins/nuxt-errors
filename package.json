{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "pnpm run check-errors && nuxt build",
    "dev": "pnpm run check-errors && nuxt dev --host=0 --port=3000",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint . --ext .vue,.js,.ts,.tsx --max-warnings 0",
    "typecheck": "vue-tsc --noEmit",
    "check-errors": "pnpm run typecheck && pnpm run lint",
    "generate-graphql-types": "graphql-codegen --config codegen.yml",
    "generate-graphql-schema": "gq https://rickandmortyapi.com/graphql --introspect > common/types/graphql/schema.graphql",
    "generate-graphql": "pnpm run generate-graphql-types ; pnpm run generate-graphql-schema || echo '[info] Failed to generate schema.graphql'",
    "postinstall": "pnpm run generate-graphql && nuxt prepare",
    "postbuild": "cd .output/server/node_modules/tslib; npm pkg set 'exports[.].import.node'='./tslib.es6.mjs'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.4.2",
    "@fortawesome/free-regular-svg-icons": "6.4.2",
    "@fortawesome/free-solid-svg-icons": "6.4.2",
    "@fortawesome/vue-fontawesome": "3.0.3",
    "@tailwindcss/container-queries": "0.1.1",
    "@vuelidate/core": "2.0.3",
    "@vuelidate/validators": "2.0.4",
    "@vueuse/core": "10.4.0",
    "@vueuse/nuxt": "10.4.0",
    "defu": "6.1.2",
    "postcss-important-startstop": "2.0.0",
    "primevue": "3.32.2",
    "radash": "11.0.0",
    "tailwind-merge": "1.14.0",
    "vue-tsc": "1.8.8",
    "@apollo/client": "3.8.1"
  },
  "devDependencies": {
    "@nuxt/devtools": "0.8.0",
    "@nuxtjs/apollo": "5.0.0-alpha.6",
    "@nuxtjs/tailwindcss": "6.8.0",
    "@types/node": "20.5.6",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "@vue/eslint-config-typescript": "11.0.3",
    "eslint": "8.48.0",
    "eslint-plugin-vue": "9.17.0",
    "nuxt": "3.7.0",
    "typescript": "5.2.2",
    "vue-eslint-parser": "9.3.1",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/import-types-preset": "2.2.6",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "graphqurl": "1.0.1"
  }
}
